<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    tools:context=".qris">

    <RelativeLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF"
        android:paddingStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/qrisImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_scanner"
            android:backgroundTint="@color/black" />

        <TextView
            android:id="@+id/instructionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qrisImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Scan Kode QRIS"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <!-- Action Bar at the Bottom Left Corner -->
    <LinearLayout
        android:id="@+id/bottomLeftActionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <!-- Add your icons or buttons for the left action bar here -->

        <ImageView
            android:id="@+id/leftActionIcon2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/flashlight"/>

        <!-- Add more items if needed -->
    </LinearLayout>

    <!-- Action Bar at the Bottom Right Corner -->
    <LinearLayout
        android:id="@+id/bottomRightActionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <!-- Add your icons or buttons for the right action bar here -->

        <ImageView
            android:id="@+id/rightActionIcon2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_collections_24" />

        <!-- Add more items if needed -->
    </LinearLayout>


</RelativeLayout>